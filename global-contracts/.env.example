# ====================
# FEATURE FLAGS
# ====================

# Enable/disable features
ENABLE_TRAVEL_RULE=true
ENABLE_PGP_SIGNING=true
ENABLE_WEBHOOK_VALIDATION=true
ENABLE_RATE_LIMITING=true

# Testing mode (DO NOT ENABLE IN PRODUCTION)
ENABLE_TEST_MODE=false
BYPASS_KYC_VERIFICATION=false

# ====================
# PRODUCTION SAFEGUARDS
# ====================

# Environment identifier
NODE_ENV=production # or development, staging, test

# Require HTTPS in production
REQUIRE_HTTPS=true

# Maximum gas price (in gwei) - prevent accidental high gas transactions
MAX_GAS_PRICE=100

# Emergency pause flag
EMERGENCY_PAUSE=false

# ====================
# JURISDICTION-SPECIFIC SETTINGS
# ====================

# UAE/DMCC specific configuration
UAE_DMCC_LICENSE_NUMBER=your_dmcc_license
UAE_REGULATORY_REPORTING_ENDPOINT=https://uae-reporting.endpoint

# EU GDPR compliance
GDPR_DATA_RETENTION_DAYS=2555 # 7 years
GDPR_CONSENT_REQUIRED=true

# US compliance (if applicable)
US_ACCREDITED_INVESTOR_VERIFICATION=true
US_SECURITIES_EXEMPTION=506b # or 506c

# ====================
# BACKUP & DISASTER RECOVERY
# ====================

# Database backup configuration
DB_BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=90

# Document backup
DOCUMENT_BACKUP_PROVIDER=aws-s3 # or gcp-storage, azure-blob
DOCUMENT_BACKUP_BUCKET=fth-document-backups

# Key management service
KEY_MANAGEMENT_SERVICE=aws-kms # or azure-keyvault, gcp-kms
MASTER_KEY_ID=your-kms-key-id